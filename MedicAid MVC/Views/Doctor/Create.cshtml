@model MedicAid_MVC.Models.DoctorModel

<h2>New Doctor</h2>

@using (Html.BeginForm("Save", "Doctor"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Specialist)
        @Html.TextBoxFor(m => m.Specialist, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.HospitalName)
        @Html.TextBoxFor(m => m.HospitalName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Contact)
        @Html.TextBoxFor(m => m.Contact, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.VisitTime)
        @Html.TextBoxFor(m => m.VisitTime, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>
            @Html.CheckBoxFor(m => m.IsAvailable) Is Available?
        </label>
    </div>
    <button type="submit" class="btn btn-primary">Save</button> 

}