<body background=@Url.Content("~/Content/image/emergency2.jpg")>
    <div class="container-fluid">
        <div class="row">

            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-4">
                    </div>
                    <div align="center" class="col-md-4" style="background: skyblue" onmouseover="this.style.background = 'whitesmoke';" onmouseout="this.style.background = 'skyblue';">
                        <section style="height: 80px;"></section>
                        <form role="form">
                            <div class="form-group">

                                <label for="exampleInputName">
                                    Name
                                </label>
                                <input class="form-control" id="exampleInputName" type="text"/>
                            </div>
                            <div class="form-group">

                                <label for="exampleInputType">
                                    Type
                                </label>
                                <input class="form-control" id="exampleInputType" type="text"/>
                            </div>

                            <div class="form-group">

                                <label for="exampleInputLocation">
                                    Location
                                </label>
                                <input class="form-control" id="exampleInputLocation" type="text"/>
                            </div>

                            <div class="form-group">

                                <label for="exampleInputHospitalContact">
                                    Contact
                                </label>
                                <input class="form-control" id="exampleInputHospitalContact" type="text"/>
                            </div>



                            <button type="submit" class="btn btn-default">
                                Create
                            </button>
                            <section style="height: 80px;"></section>
                        </form>
                    </div>
                    <div class="col-md-4">
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
