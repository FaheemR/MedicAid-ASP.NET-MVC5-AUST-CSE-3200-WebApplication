
<body background=@Url.Content("~/Content/image/doctor.jpg")>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-4">
                    </div>
                    <div align="center" class="col-md-4" style="background: skyblue" onmouseover="this.style.background = 'whitesmoke';" onmouseout="this.style.background = 'skyblue';">
                        <section style="height:80px;"></section>
                        <form role="form">
                            <div class="form-group">

                                <label for="exampleInputName">
                                    Name
                                </label>
                                <input class="form-control" id="exampleInputName" type="text" />
                            </div>
                            <div class="form-group">

                                <label for="exampleInputDoctor">
                                    Specialist
                                </label>
                                <input class="form-control" id="exampleInputDoctor" type="text" />
                            </div>

                            <div class="form-group">

                                <label for="exampleInputHospitalName">
                                    Hospital's Name
                                </label>
                                <input class="form-control" id="exampleInputHospitalName" type="text" />
                            </div>

                            <div class="form-group">

                                <label for="exampleInputHospitalContact">
                                    Contact
                                </label>
                                <input class="form-control" id="exampleInputHospitalContact" type="text" />
                            </div>


                            <div class="checkbox">

                                <label>
                                    <input type="checkbox" /> Is Available?
                                </label>
                            </div>
                            <button type="submit" class="btn btn-default">
                                Create
                            </button>
                            <section style="height:80px;"></section>
                        </form>
                    </div>
                    <div class="col-md-4">
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
