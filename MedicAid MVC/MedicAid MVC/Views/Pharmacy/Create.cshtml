@model MedicAid_MVC.Models.PharmacyModel

<h2>New Pharmacy</h2>

@using (Html.BeginForm("Save", "Pharmacy"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Location)
        @Html.TextBoxFor(m => m.Location, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Location)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ClosingDay)
        @*@Html.TextBoxFor(m => m.ClosingDay, new { @class = "form-control" })*@
        @{
            List<SelectListItem> listItems = new List<SelectListItem>();
            listItems.Add(new SelectListItem
            {
                Text = "Friday",
                Value = "Friday",
                Selected = true

            });
            listItems.Add(new SelectListItem
            {
                Text = "Saturday",
                Value = "Saturday",
            });
            listItems.Add(new SelectListItem
            {
                Text = "Sunday",
                Value = "Sunday"
            });
            listItems.Add(new SelectListItem
            {
                Text = "Monday",
                Value = "Monday"
            });
            listItems.Add(new SelectListItem
            {
                Text = "Tuesday",
                Value = "Tuesday"
            });
            listItems.Add(new SelectListItem
            {
                Text = "Wednesday",
                Value = "Wednesday"
            });
            listItems.Add(new SelectListItem
            {
                Text = "Thursday",
                Value = "Thursday"
            });

        }


        @Html.DropDownListFor(m => m.ClosingDay, listItems, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Contact)
        @Html.TextBoxFor(m => m.Contact, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Contact)
    </div>


    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>

}